
pipeline{
    agent any
    environment{     
        l1="$language"
    }
    stages{
        stage('check language'){
            steps{                
                echo "$l1"
                sh '''
                    chmod +x ./script
                    echo "$l1"
                    ./script $l1
                    # docker  run --name apaci_image -it --rm -p 8796:80 -v sh
                '''                              
            }
        }
    }
}
