pipeline{
    agent any
    stages{
        stage('1'){
            steps('c'){ 
                sh '''
                    if [ $language == "c" ] ; then
                        C 
                    fi
                    if [ $language == "java" ] ; then
                        JAVA
                    fi
                    if [ $language == "python" ] ; then
                        PYTHON
                    fi
                  
                '''    
            }
        }
    }
}
