pipeline{
    agent any
    stages{
        stage('1'){
            steps('c'){ 
                sh '''
                    case "${language}" in
                    "c") bash "C" 
                    ;;
                    "java") sh ' echo "JAVA" '
                    ;;
                    "python") sh ' echo "PYTHON" '
                    ;;
                    "all") sh ' echo "all" '
                    ;;
                    esac
                '''
            }
        }
    }
}
