pipeline{
    agent any
    stages{
        stage('1'){
            steps('c'){ 
                sh '''
                    case "${language}" in
                        "c") C                        
                        ;;
                        "java") JAVA
                        ;;
                        "python") PYTHON
                        ;;
                        "all") C
                            JAVA
                            PYTHON
                        ;;
                    esac
                '''                
            }
        }
    }
}

