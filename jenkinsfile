pipeline{
    agent any
    stages{
        stage('1'){
            steps('c'){ 
                sh '''
                    pwd
                    case "${language}" in
                    "c") sh C
                    ;;
                    "java") sh JAVA
                    ;;
                    "python") sh PYTHON
                    ;;
                    "all") sh C 
                            sh JAVA
                            sh PYTHON
                    ;;
                    esac
                '''
            }
        }
    }
}
