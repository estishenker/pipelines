pipeline{
    agent any
    stages{
        stage('1'){
            steps('c'){               
                    case "$1" in
                    "c") sh ' echo "C" '
                    ;;
                    "java") sh ' echo "JAVA" '
                    ;;
                    "python") sh ' echo "PYTHON" '
                    ;;
                    "all") sh ' echo "all" '
                    ;;
                    esac
                '''
            }
        }
    }
}
